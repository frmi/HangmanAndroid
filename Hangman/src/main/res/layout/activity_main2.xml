<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_weight="100">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:contentDescription="@string/ImageDescription" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView4"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_rowSpan="2"
                android:gravity="center_vertical|center_horizontal"
                android:autoText="false"
                android:text="Word to guess" />

            <Space
                android:layout_width="20dp"
                android:layout_height="30dp" />

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonsTop"
                android:focusableInTouchMode="false">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="Q"
                    android:id="@+id/qBtn"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="W"
                    android:id="@+id/wBtn"
                    android:layout_row="5"
                    android:layout_column="9"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="E"
                    android:id="@+id/eBtn"
                    android:layout_row="5"
                    android:layout_column="8"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="R"
                    android:id="@+id/rBtn"
                    android:layout_row="5"
                    android:layout_column="7"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="T"
                    android:id="@+id/tBtn"
                    android:layout_row="5"
                    android:layout_column="6"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="Y"
                    android:id="@+id/yBtn"
                    android:layout_row="5"
                    android:layout_column="5"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="U"
                    android:id="@+id/uBtn"
                    android:layout_row="5"
                    android:layout_column="3"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="I"
                    android:id="@+id/iBtn"
                    android:layout_row="5"
                    android:layout_column="4"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="O"
                    android:id="@+id/oBtn"
                    android:layout_row="5"
                    android:layout_column="2"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="P"
                    android:id="@+id/pBtn"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="Å"
                    android:id="@+id/aaBtn"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonsMid">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:id="@+id/aBtn"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="S"
                    android:id="@+id/sBtn"
                    android:layout_row="5"
                    android:layout_column="9"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="D"
                    android:id="@+id/dBtn"
                    android:layout_row="5"
                    android:layout_column="8"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="F"
                    android:id="@+id/fBtn"
                    android:layout_row="5"
                    android:layout_column="7"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="G"
                    android:id="@+id/gBtn"
                    android:layout_row="5"
                    android:layout_column="6"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="fill_parent"
                    android:text="H"
                    android:id="@+id/hBtn"
                    android:layout_row="5"
                    android:layout_column="5"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="J"
                    android:id="@+id/jBtn"
                    android:layout_row="5"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:clickable="true" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="K"
                    android:id="@+id/kBtn"
                    android:layout_row="5"
                    android:layout_column="4"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="L"
                    android:id="@+id/lBtn"
                    android:layout_row="5"
                    android:layout_column="2"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="Æ"
                    android:id="@+id/aeBtn"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="Ø"
                    android:id="@+id/oeBtn"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonsBot"
                android:baselineAligned="false"
                android:measureWithLargestChild="false">

                <Space
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_weight="1" />

                <Space
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:id="@+id/space4" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="Z"
                    android:id="@+id/zBtn"
                    android:layout_row="5"
                    android:layout_column="6"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:id="@+id/xBtn"
                    android:layout_row="5"
                    android:layout_column="5"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:id="@+id/cBtn"
                    android:layout_row="5"
                    android:layout_column="3"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="V"
                    android:id="@+id/vBtn"
                    android:layout_row="5"
                    android:layout_column="4"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:id="@+id/bBtn"
                    android:layout_row="5"
                    android:layout_column="2"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="N"
                    android:id="@+id/nBtn"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="M"
                    android:id="@+id/mBtn"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_weight="1" />

                <Space
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:id="@+id/space5" />

                <Space
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:id="@+id/space6" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>