<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/ResetBtn"
                android:id="@+id/newWordBtn"
                android:layout_gravity="center" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout2" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/Points"
                            android:id="@+id/pointsText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/points"
                            android:singleLine="false" />
                    </LinearLayout>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/Streak"
                            android:id="@+id/streakText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/streak" />
                    </LinearLayout>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/space" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout3">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/MaxPoints"
                            android:id="@+id/textView2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/maxPointsView" />
                    </LinearLayout>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/space2" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/Opponent"
                            android:id="@+id/opponentText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/opponent"
                            android:text="N/A" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_weight="100">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:contentDescription="@string/ImageDescription" />
    </FrameLayout>

    <Space
        android:layout_width="20dp"
        android:layout_height="20px"
        android:id="@+id/space3"
        android:visibility="gone"
        android:layout_gravity="right" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/categoryLbl"
                    android:id="@+id/textView"
                    android:layout_marginLeft="4dp" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="fill_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/categoryView" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/wordLayout" />


            <Space
                android:layout_width="20dp"
                android:layout_height="fill_parent" />

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonsTop"
                android:focusableInTouchMode="false">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="q"
                    android:id="@+id/qBtn"
                    android:layout_weight="1" />

                <Space
                    android:layout_width="6dp"
                    android:layout_height="fill_parent" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="w"
                    android:id="@+id/wBtn"
                    android:layout_row="5"
                    android:layout_column="9"
                    android:layout_weight="1"
                    android:layout_marginLeft="-6dp"
                    android:layout_marginRight="-6dp" />

                <Space
                    android:layout_width="6dp"
                    android:layout_height="fill_parent" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="e"
                    android:id="@+id/eBtn"
                    android:layout_row="5"
                    android:layout_column="8"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="r"
                    android:id="@+id/rBtn"
                    android:layout_row="5"
                    android:layout_column="7"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="t"
                    android:id="@+id/tBtn"
                    android:layout_row="5"
                    android:layout_column="6"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="y"
                    android:id="@+id/yBtn"
                    android:layout_row="5"
                    android:layout_column="5"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="u"
                    android:id="@+id/uBtn"
                    android:layout_row="5"
                    android:layout_column="3"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="i"
                    android:id="@+id/iBtn"
                    android:layout_row="5"
                    android:layout_column="4"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="o"
                    android:id="@+id/oBtn"
                    android:layout_row="5"
                    android:layout_column="2"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="p"
                    android:id="@+id/pBtn"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="å"
                    android:id="@+id/aaBtn"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonsMid">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="a"
                    android:id="@+id/aBtn"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="s"
                    android:id="@+id/sBtn"
                    android:layout_row="5"
                    android:layout_column="9"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="d"
                    android:id="@+id/dBtn"
                    android:layout_row="5"
                    android:layout_column="8"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="f"
                    android:id="@+id/fBtn"
                    android:layout_row="5"
                    android:layout_column="7"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="g"
                    android:id="@+id/gBtn"
                    android:layout_row="5"
                    android:layout_column="6"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="fill_parent"
                    android:text="h"
                    android:id="@+id/hBtn"
                    android:layout_row="5"
                    android:layout_column="5"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="j"
                    android:id="@+id/jBtn"
                    android:layout_row="5"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:clickable="true" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="k"
                    android:id="@+id/kBtn"
                    android:layout_row="5"
                    android:layout_column="4"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="l"
                    android:id="@+id/lBtn"
                    android:layout_row="5"
                    android:layout_column="2"
                    android:layout_weight="1" />

                <Space
                    android:layout_width="6dp"
                    android:layout_height="fill_parent" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="æ"
                    android:id="@+id/aeBtn"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:layout_marginRight="-6dp"
                    android:layout_marginLeft="-6dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp" />

                <Space
                    android:layout_width="6dp"
                    android:layout_height="fill_parent" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="ø"
                    android:id="@+id/oeBtn"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonsBot"
                android:baselineAligned="false"
                android:measureWithLargestChild="false">

                <Space
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_weight="1" />

                <Space
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:id="@+id/space4" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="z"
                    android:id="@+id/zBtn"
                    android:layout_row="5"
                    android:layout_column="6"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="x"
                    android:id="@+id/xBtn"
                    android:layout_row="5"
                    android:layout_column="5"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="c"
                    android:id="@+id/cBtn"
                    android:layout_row="5"
                    android:layout_column="3"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="v"
                    android:id="@+id/vBtn"
                    android:layout_row="5"
                    android:layout_column="4"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="b"
                    android:id="@+id/bBtn"
                    android:layout_row="5"
                    android:layout_column="2"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="n"
                    android:id="@+id/nBtn"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_weight="1" />

                <Space
                    android:layout_width="6dp"
                    android:layout_height="fill_parent" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="m"
                    android:id="@+id/mBtn"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:layout_marginLeft="-6dp"
                    android:layout_marginRight="-6dp" />

                <Space
                    android:layout_width="6dp"
                    android:layout_height="fill_parent" />

                <Space
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:id="@+id/space5" />

                <Space
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:id="@+id/space6" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>